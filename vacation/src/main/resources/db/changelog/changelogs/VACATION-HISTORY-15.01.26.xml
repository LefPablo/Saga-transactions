<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="VACATION-HISTORY-15.01.26" author="finskiypavel@gmail.com">
        <createTable tableName="vacation_request_history">
            <column name="id" type="BIGINT" generationType="ALWAYS" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_vacation_request_history"/>
            </column>
            <column name="request_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>